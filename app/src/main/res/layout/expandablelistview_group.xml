<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:background="@drawable/circular_image_view_background_extreme_color">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.73"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:background="@color/transparent100">

                    <TextView
                        android:id="@+id/date_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/DeepColor"
                        android:text="Date"
                        android:textSize="20sp"
                        android:background="@color/transparent100"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:background="@color/transparent100">

                    <TextView
                        android:id="@+id/RS_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/MediumColor"
                        android:text="Rs"
                        android:textSize="20sp"
                        android:background="@color/transparent100"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.8"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:background="@color/transparent100">

                    <TextView
                        android:id="@+id/amountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/DeepColor"
                        android:text="Amount"
                        android:textSize="20sp"
                        android:background="@color/transparent100"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.2"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:background="@color/transparent100">
                    <ImageView
                        android:id="@+id/arrow_imageView2"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@android:drawable/arrow_down_float"
                        app:tint="?attr/MediumColor" />
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>