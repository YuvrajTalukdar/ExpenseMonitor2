<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/expenseFragment_linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.7"
        android:weightSum="2">

        <ExpandableListView
            android:id="@+id/expense_list_expandable_list_view"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:animateLayoutChanges="true"
            android:layout_weight="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/expenseFragment_linear_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_weight="0.3"
        android:weightSum="2">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_expense_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:elevation="6dp"
            android:backgroundTint="?attr/MediumColor"
            app:rippleColor="?attr/DarkColor"
            android:src="@drawable/add_icon"
            android:layout_margin="16dp" />

    </LinearLayout>

</LinearLayout>