<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundColor">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/dialog_button_ripple">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:background="@color/transparent100">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.8"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:background="@color/transparent100">
                        <TextView
                            android:id="@+id/item_name_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/DeepColor"
                            android:text="ItemName"
                            android:textSize="20sp"
                            android:background="@color/transparent100"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.2"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:background="@color/transparent100">
                        <TextView
                            android:id="@+id/RS_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/MediumColor"
                            android:text="Rs"
                            android:textSize="20sp"
                            android:background="@color/transparent100"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.9"
                        android:gravity="center|left"
                        android:orientation="vertical"
                        android:background="@color/transparent100">
                        <TextView
                            android:id="@+id/item_costTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/DeepColor"
                            android:text="Amount"
                            android:textSize="20sp"
                            android:background="@color/transparent100"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/expenseItemDeleteButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="@drawable/circular_button_style"
                        android:contentDescription="@string/delete_item"
                        android:padding="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/delete_icon"/>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_gravity="bottom"
                    android:background="?attr/LightColor" />

            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>